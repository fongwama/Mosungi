<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/patient_dialog_margin_top"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/patient_dialog_margin_top"
        android:clickable="true"
        android:background="@drawable/dialog_item_selector"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_profile_24dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Planifier un message"
            android:textSize="18sp"
            android:textColor="@color/colorSecondaryText"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addNewAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/patient_dialog_margin_top"
        android:clickable="true"
        android:background="@drawable/dialog_item_selector"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"

            android:src="@drawable/ic_alarm_add_black_24dp"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popup_patient_plan_sms"
            android:textSize="18sp"

            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            android:textColor="@color/colorSecondaryText"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sendSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/patient_dialog_margin_top"
        android:clickable="true"
        android:background="@drawable/dialog_item_selector"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_textsms_24dp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"

            />

        <TextView
            android:id="@+id/textNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popup_patient_send_sms"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            android:textColor="@color/colorSecondaryText"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/patient_dialog_margin_top"
        android:clickable="true"
        android:background="@drawable/dialog_item_selector"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            />

        <TextView
            android:id="@+id/callPatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popup_patient_call"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            android:textColor="@color/colorSecondaryText"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/updatePatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/patient_dialog_margin_top"
        android:clickable="true"
        android:background="@drawable/dialog_item_selector"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_24dp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            />

        <TextView
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popup_patient_update"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            android:textColor="@color/colorSecondaryText"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/desactivateAllAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/patient_dialog_margin_top"
        android:clickable="true"
        android:background="@drawable/dialog_item_selector"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alarm_off_black_24dp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            />
        <TextView
            android:id="@+id/alarmOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popup_patient_switch_all_off"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            android:textColor="@color/colorSecondaryText"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/clearAllAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/patient_dialog_margin_top"
        android:alpha="0.6"
        android:clickable="true"
        android:background="@drawable/dialog_item_selector"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_delete_black_24dp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            />
        <TextView
            android:id="@+id/clearAlarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popup_patient_remove_from_groups"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            android:textColor="@color/colorSecondaryText"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/copyPatientNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/patient_dialog_margin_top"
        android:clickable="true"
        android:alpha="0.6"
        android:background="@drawable/dialog_item_selector"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_copy_black_24dp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            />
        <TextView
            android:id="@+id/copyNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popup_patient_copy_number"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            android:textColor="@color/colorSecondaryText"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/deletePatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/patient_dialog_margin_top"
        android:layout_marginBottom="@dimen/patient_dialog_margin_top"
        android:clickable="true"
        android:background="@drawable/dialog_item_selector"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_delete_black_24dp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            />

        <TextView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popup_patient_delete"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/patient_dialog_marfin_left"
            android:textColor="@color/colorSecondaryText"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>